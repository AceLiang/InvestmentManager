<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res/com.app.client.investment">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical">
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/activity_vertical_margin"
	        android:orientation="horizontal">
            
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                
                <TextView 
	                  android:id="@+id/lable1"
	                  android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:layout_alignParentLeft="true"
	               		android:textColor="#8D8D8D"
	               		android:text="计算结果:"/>
                <TextView 
	                  android:id="@+id/value1"
	                  android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:layout_toRightOf="@id/lable1"
	               		android:textColor="#8D8D8D"
	               		android:text="您风险承受能力为"/>
                <TextView 
                    android:id="@+id/value2"
                    android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:gravity="top"
	               		android:layout_toRightOf="@id/value1"
	               		android:textSize="20sp"
	               		android:textStyle="bold"
	               		android:textColor="#EF6524"
	               		android:text="79"/>
               	<TextView 
                    android:id="@+id/value3"
                    android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:layout_toRightOf="@id/value2"
	               		android:textColor="#8D8D8D"
	               		android:text="分"/>
                <TextView 
                    android:id="@+id/value4"
                    android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:paddingTop="10dp"
	               		android:layout_below ="@id/value1"
	               		android:layout_alignLeft="@id/value1"
	               		android:textColor="#8D8D8D"
	               		android:text="风险承受态度为"/>
                <TextView 
                    android:id="@+id/value5"
                    android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:gravity="top"
	               		android:layout_toRightOf="@id/value4"
	               		android:layout_alignTop="@id/value4"
	               		android:textSize="20sp"
	               		android:paddingTop="10dp"
	               		android:textColor="#EF6524"
	               		android:textStyle="bold"
	               		android:text="70"/>
                <TextView 
                    android:id="@+id/value6"
                    android:layout_width="wrap_content"
	               		android:layout_height="wrap_content"
	               		android:layout_toRightOf="@id/value5"
	               		android:layout_alignTop="@id/value4"
	               		android:textColor="#8D8D8D"
	               		android:paddingTop="10dp"
	               		android:text="分"/>
            </RelativeLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:text="该组合预期收益:"/>
                <com.opensource.librarys.roundprogressbar.RoundProgressBar 
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressBar1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"	                   								                   
                    app:roundColor="#ECEADD"
                    app:roundProgressColor="#EF6524"
                    app:roundWidth="10dp"
                    app:textColor="#EF6524"
                    app:textSize="22sp"
                    app:textIsDisplayable="true"               
                   />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/activity_vertical_margin"
	        android:paddingRight="@dimen/activity_vertical_margin"
	        android:paddingBottom="@dimen/activity_vertical_margin"
	        android:orientation="vertical">
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="假设投资标的预期收益为:"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">
                <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:orientation="vertical">
	                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:paddingTop="5dp"
		                android:paddingBottom="5dp"
		                android:gravity="center"
		                android:textSize="18sp"
	               		android:textColor="#EF6524"
		                android:text="2%"/>
	                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dp"
		                android:paddingBottom="5dp"
		                android:layout_gravity="center"
		                android:gravity="center"
		                android:textColor="#8D8D8D"
		                android:text="中性对冲类收益率"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:orientation="vertical">
	                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:gravity="center"
		                android:paddingTop="5dp"
		                android:paddingBottom="5dp"
		                android:textSize="18sp"
	               		android:textColor="#EF6524"
		                android:text="2%"/>
	                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:gravity="center"
		                android:paddingTop="5dp"
		                android:paddingBottom="5dp"
		                android:textColor="#8D8D8D"
		                android:text="中性对冲类收益率"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:orientation="vertical">
	                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:gravity="center"
		                android:paddingTop="5dp"
		                android:paddingBottom="5dp"
		                android:textSize="18sp"
	               		android:textColor="#EF6524"
		                android:text="2%"/>
	                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:gravity="center"
		                android:paddingTop="5dp"
		                android:paddingBottom="5dp"
		                android:textColor="#8D8D8D"
		                android:text="中性对冲类收益率"/>
	            </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>        
        
        <TableLayout 
            android:layout_width="match_parent"  
	    			android:layout_height="wrap_content"
	    			android:stretchColumns="*" 
	    			android:background="#DDDDDD">
            <TableRow 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_margin="1dp">
                <LinearLayout 
                    android:layout_width="match_parent"
          					android:layout_height="wrap_content"
          					android:orientation="horizontal">
                    <LinearLayout 
                        android:layout_width="wrap_content"
            						android:layout_height="50dp"
            						android:layout_weight="1"   
            						android:gravity="center"  
            						android:orientation="vertical">
                    		<TextView 
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="33333333"/>
			                 <TextView 
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="33333333"/> 
		                </LinearLayout>
		                <LinearLayout 
                        android:layout_width="wrap_content"
            						android:layout_height="50dp"
            						android:layout_weight="1" >
				                <com.opensource.librarys.roundprogressbar.RoundProgressBar 
					                  xmlns:app="http://schemas.android.com/apk/res-auto"
					                  android:id="@+id/progressBar2"
					                  android:layout_width="50dp"
					                  android:layout_height="50dp"							                                                								                   
					                  app:roundColor="#ECEADD"
					                  app:roundProgressColor="#EF6524"
					                  app:roundWidth="5dp"
					                  app:textColor="#EF6524"
					                  app:textSize="12sp"
					                  app:textIsDisplayable="true" />
		                </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
          						android:layout_height="wrap_content"
          						android:orientation="horizontal">
                    <LinearLayout 
                        android:layout_width="wrap_content"
            						android:layout_height="50dp"
            						android:layout_weight="1"   
            						android:gravity="center"    
            						android:orientation="vertical">
                    		<TextView 
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="33333333"/>
			                 <TextView 
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="33333333"/> 
		                </LinearLayout>
		                <LinearLayout 
                        android:layout_width="wrap_content"
            						android:layout_height="50dp"
            						android:layout_weight="1" >
				                <com.opensource.librarys.roundprogressbar.RoundProgressBar 
					                  xmlns:app="http://schemas.android.com/apk/res-auto"
					                  android:id="@+id/progressBar3"
					                  android:layout_width="50dp"
					                  android:layout_height="50dp"							                                                								                   
					                  app:roundColor="#ECEADD"
					                  app:roundProgressColor="#EF6524"
					                  app:roundWidth="5dp"
					                  app:textColor="#EF6524"
					                  app:textSize="12sp"
					                  app:textIsDisplayable="true" />
		                </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
          						android:layout_height="wrap_content"
          						android:orientation="horizontal">
                    <LinearLayout 
                        android:layout_width="wrap_content"
            						android:layout_height="50dp"
            						android:layout_weight="1"     
            						android:gravity="center"  
            						android:orientation="vertical">
                    		<TextView 
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="33333333"/>
			                 <TextView 
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="33333333"/> 
		                </LinearLayout>
		                <LinearLayout 
                        android:layout_width="wrap_content"
            						android:layout_height="50dp"
            						android:layout_weight="1" >
				                <com.opensource.librarys.roundprogressbar.RoundProgressBar 
					                  xmlns:app="http://schemas.android.com/apk/res-auto"
					                  android:id="@+id/progressBar4"
					                  android:layout_width="50dp"
					                  android:layout_height="50dp"							                                                								                   
					                  app:roundColor="#ECEADD"
					                  app:roundProgressColor="#EF6524"
					                  app:roundWidth="5dp"
					                  app:textColor="#EF6524"
					                  app:textSize="12sp"
					                  app:textIsDisplayable="true" />
		                </LinearLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>  
        
        
        
        <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
		        <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:paddingTop="10dp"
						    android:paddingBottom="10dp"
				        android:orientation="horizontal">
				        <TextView 
						        android:layout_width="50dp"
						        android:layout_height="wrap_content"	        				        
						        android:textSize="12sp"
						        android:layout_weight="1"
						        android:textColor="#343434"
						        android:gravity="left"
						        android:text="代码  "/>
				        <TextView 
						        android:layout_width="100dp"
						        android:layout_height="wrap_content"	        
						        android:textSize="12sp"
						        android:layout_weight="3"
						        android:textColor="#343434"
						        android:gravity="left"
						        android:text="名称 "/>
				        <TextView 
						        android:layout_width="50dp"
						        android:layout_height="wrap_content"	        
						        android:textSize="12sp"
						        android:layout_weight="0.5"
						        android:textColor="#343434"
						        android:gravity="center"
						        android:text="今年以来\n收益(%)"/>
				        <TextView 
						        android:layout_width="70dp"
						        android:layout_height="wrap_content"	        
						        android:textSize="12sp"
						        android:layout_weight="0.5"
						        android:textColor="#343434"
						        android:gravity="center"
						        android:text="最大回撤\n(%)"/>
				        <TextView 
						        android:layout_width="50dp"
						        android:layout_height="wrap_content"	
						        android:layout_weight="2"        
						        android:textSize="12sp"
						        android:textColor="#343434"
						        android:gravity="center"
						        android:text="评级"/>		        
				    </LinearLayout>
				        
		        <ListView 
	            android:id="@+id/risk_analysis_listView"
	            android:layout_width="match_parent"
	            android:layout_height="300dp"/>
		    </LinearLayout>
    </LinearLayout>	
</ScrollView>