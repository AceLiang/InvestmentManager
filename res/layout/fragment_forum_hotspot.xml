<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
		<TextView 
        android:id="@+id/juxianfang_forum_hotspot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/fundresearch_company_title"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="朱雀白石投资论坛"/>
    
     <ListView 
        android:id="@+id/juxianfang_forum_hotspot_ListView"
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:layout_below="@id/juxianfang_forum_hotspot_title"
       	android:layout_above="@+id/juxianfang_forum_hotspot_loadMore"/> 
       	
    <Button 
        android:id="@+id/juxianfang_forum_hotspot_loadMore"
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:layout_above="@+id/juxianfang_forum_add_post_layout"
       	android:text="加载gengd"/>
    
    <LinearLayout 
        android:id="@+id/juxianfang_forum_add_post_layout"
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
       	android:orientation="horizontal">
        <EditText 
            android:id="@+id/juxianfang_forum_post_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="我要发帖"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
    </LinearLayout>
</RelativeLayout>
